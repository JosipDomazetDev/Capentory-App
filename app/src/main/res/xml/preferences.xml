<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Preference
        app:key="feedback"
        app:summary="Report technical issues or suggest new features"
        app:title="Send feedback" />

    <EditTextPreference
        android:inputType="textUri"
        android:key="server_ip"
        android:summary="IP-Adresse oder Hostname konfigurieren"
        android:title="Serveradresse" />
    <EditTextPreference
        android:defaultValue="80"
        android:inputType="number"
        android:key="server_port"
        android:summary="Portnummer konfigurieren (Default:80)"
        android:title="Serverport" />


    <ListPreference
        android:dialogTitle="Texterkennungsmodus auswÃ¤hlen"
        android:entries="@array/text_scan_modes"
        android:entryValues="@array/text_scan_modes_values"
        android:defaultValue="@array/text_scan_default_mode"
        android:key="text_filter_mode"
        android:summary="Den Filter der Texterkennung konfigurieren"
        android:title="Texterkennungsmodus" />

</PreferenceScreen>