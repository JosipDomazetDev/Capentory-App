<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/inventory"
        android:name="com.example.capentory_client.ui.ActualItemsFragment"
        android:label="fragment_inventory"
        tools:layout="@layout/fragment_actualitems" >
        <action
            android:id="@+id/action_inventory_to_flashScanBarcodeAcitivity"
            app:destination="@id/flashScanBarcodeAcitivity" />
    </fragment>
    <activity
        android:id="@+id/flashScanBarcodeAcitivity"
        android:name="com.example.capentory_client.ui.barcode_activities.FlashScanBarcodeActivity"
        android:label="activity_flash_barcode_scan_acitivity"
        tools:layout="@layout/activity_flash_barcode_scan_acitivity" />
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.capentory_client.ui.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" />
    <fragment
        android:id="@+id/roomFragment"
        android:name="com.example.capentory_client.ui.ActualRoomsFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_actualrooms" >
        <action
            android:id="@+id/action_roomFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/action_roomFragment_to_inventory"
            app:destination="@id/inventory" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.capentory_client.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/action_itemDetailFragment_to_inventory"
            app:destination="@id/inventory" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.capentory_client.ui.SettingsFragment"
        android:label="SettingsFragment" />

    <!--Global action-->
    <action android:id="@+id/open_settings_fragment"
        app:destination="@id/settingsFragment"/>

</navigation>